{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": "./src",
        "esModuleInterop": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "allowJs": true,
        "types": [
            "node",
            "jest"
        ],
        "declaration": true,
        "resolveJsonModule": true,
        "moduleResolution": "Node"
    },
    "exclude": [
        "node_modules",
        "src/**/*.spec.ts",
        "src/**/*.test.ts",
    ],
    "include": [
        "src/**/*"
    ],
}